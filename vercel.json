{
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" },
    { "source": "/api/(.*)", "destination": "/API/$1" }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "API/app.js",
      "use": "@vercel/node"
    }
  ]
}
