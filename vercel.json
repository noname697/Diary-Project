{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "API/app.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["API/controllers/**"] }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/API/app.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}